@page
@model LoginModel





<div class="main-container pb-1" style="min-height:calc(100vh - 22vh)">
      <section class="space-md">
        <div class="container align-self-start">
          <!--end of row-->
          <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-7">
              <div class="card card-lg text-center">
                <div class="card-body">
                  <div class="mb-5">
                    <h1 class="h2 mb-2">Hello again</h1>
                    <span>Sign in to your account to continue</span>
                  </div>
                  <div class="row no-gutters justify-content-center">
                    <form class="text-left col-lg-8" id="account" method="post">
                      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                      <div class="form-group">
                        <label>Username</label>
                        <input asp-for="Input.UserName" class="form-control form-control-lg" type="text" autocomplete="username" aria-required="true">
                      </div>
                      <div class="form-group">
                        <label asp-for="Input.Password" ></label>
                        <input asp-for="Input.Password" class="form-control form-control-lg" type="password" autocomplete="current-password" aria-required="true">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <small>Forgot password? <a id="forgot-password" asp-page="./ForgotPassword">Reset here</a> </small>
                      </div>
                      <div>
                        <div class="custom-control custom-checkbox align-items-center">
                          <input asp-for="Input.RememberMe" type="checkbox" class="custom-control-input" value="box-1" name="box-1" checked="" id="check-remember">
                          <label class="custom-control-label text-small" for="check-remember">Remember me next time</label>
                        </div>
                      </div>
                      <div class="text-center mt-3">
                        <button id="login-submit" type="submit" class="btn btn-lg btn-primary">Log in</button>
                      </div>
                    </form>
                  </div>
                  <!--end of row-->
                </div>
              </div>
              <div class="text-center">
                <span class="text-small">Don't have an account yet? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create one</a></span>
              </div>
            </div>
            <!--end of col-->
          </div>
          <!--end of row-->
        </div>
        <!--end of container-->
      </section>
      <!--end of section-->
    </div>
